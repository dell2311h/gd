<%= form_for @image, :url => venue_manager_image_path(@image), :html => { :class => 'popup popup-medium', :multipart => true, :method => :put } do |f|%>
	<%= link_to_function '', 'parent.$.fn.colorbox.close()', :class => 'close-btn' %>
	
	<span id="form_container">
	<header>
	    <hgroup class="left">
	        <h1>edit <%= @image.kind_name %></h1>
	        <h2>(required fields in orange)</h2>
	    </hgroup>
	</header>
	
	<%= render :partial => 'form', :locals => { :f => f } %>

	<footer>
	    <button class="save">save</button>
	    <button class="cancel" onclick="parent.$.fn.colorbox.close();return false;">cancel</button>
	</footer>
	</span>
<% end %>