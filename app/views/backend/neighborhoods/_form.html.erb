<tr>
	<td>&nbsp;</td>
	<td  align="left">Country&nbsp;<font class="errormsg">*</font></td>
	<td> : </td>
	<td  align="left">
		<%= f.select :country_id, [['Select country', nil]].concat(@countries.collect {|p| [ p.name, p.id ] }), {}, { :style => "width:150px",
			:onchange => remote_function(:update => 'neighborhood_region_id', :url => get_states_users_path, :with => "'country_id='+value" ) } -%>
	</td>
	<td>&nbsp;</td>
</tr>
	<tr>
	<td>&nbsp;</td>
	<td  align="left">State&nbsp;<font class="errormsg">*</font></td>
	<td> : </td>
	<td  align="left">
		<%= f.select :region_id, [['Select state', nil]].concat(@regions.collect {|p| [ p.name, p.id ] }), { :style => "width:175px" } -%>
	</td>
	<td>&nbsp;</td>
</tr>
<tr>
	<td width="30%">&nbsp;</td>
	<td width="15%" align="left">City&nbsp;<font class="errormsg">*</font></td>
	<td width="1%"> : </td>
	<td width="40%" align="left">
		<%= f.text_field :city_name -%>
		<script>
			jQuery(document).ready(function() {
		    	jQuery("input#neighborhood_city_name").autocomplete("<%= get_cities_users_path -%>", { max: 20, extraParams: { region_id:function(){ return jQuery("select#neighborhood_region_id").val(); }}});
		  	});
		</script>
	</td>
	<td width="14%">&nbsp;</td>
</tr>
<tr>
	<td width="30%">&nbsp;</td>
	<td width="15%" align="left">Neighbourhood&nbsp;<font class="errormsg">*</font></td>
	<td width="1%"> : </td>
	<td width="40%" align="left"><%= f.text_field :name, :size => 28,:class =>'input' %></td>
	<td width="14%">&nbsp;</td>
</tr>
<tr>
	<td>&nbsp;</td>
	<td  align="left">Status&nbsp;<font class="errormsg">*</font></td>
	<td> : </td>
	<td  align="left">
			<%= f.select :verified, [['Inactive',false],['Active',true]] %>
	</td>
	<td>&nbsp;</td>
</tr>