<table width="97%" border="0" align="center" cellpadding="2" cellspacing="2">
<tr>
          <td valign="top">
			<table width="100%" cellspacing="0" cellpadding="0" border="0">
			<tr>
				<td>
					<div class="screenTitle">
						<table width="100%" border="0" cellspacing="0" cellpadding="0">
						<tr>
							<td><img src="/images/backend/on.gif" width="16" height="16">&nbsp;Fairs Groups List <span class="name"></span>Of <span class="name">GalleryDog</span></td>
							<td>&nbsp;</td>
						</tr>
						</table>
					</div>
				</td>	  
			</tr>
			<tr>
				<td>&nbsp;</td>
			</tr>
			</table>
		<table width="100%" border="0" cellpadding="0" cellspacing="0">
		<tr>
			<td>
				<div class="listArea">
				<fieldset>
					<legend>Fair groups</legend>
						<table width="100%" border="0" cellspacing="1" cellpadding="1">
						<tr>
							<td width="80%" Class="td-listing">
								<font class="errormsg">
									<% if !flash[:notice].nil?%>
									<%=flash[:notice]%>
									<% end %>
								</font>
							</td>
							<td valign="middle"><div align="right"></div></td>
							<td width="15%"  class="td-listing">
								<% form_tag backend_fair_groupings_path, :id => 'search_form', :method => :get do %>
							</td>
							<td  class="td-listing">
								<div align="right">
										<input  name="search" type="Text" size="20" value="<%= params[:search] -%>">
									<% end %>
								</div>
							</td>
							<td class="td-listing">
								<div align="right">
									<%= link_to_function image_tag("/images/backend/search.jpg"), "jQuery('#search_form')[0].submit();" %>
								</div>
							</td>
						</tr>
						<tr>
							<td colspan="5">
								<table width="100%" border="0" cellspacing="0" cellpadding="0">
									<tr>
										<td width="8%" class="td-listing">
											<%= link_to image_tag("/images/backend/addnew.jpg"), new_backend_fair_grouping_path %>
										</td>
										<!-- <td width="8%" class="td-listing">
											<%= link_to_function image_tag("/images/backend/delete.jpg"), 'deleteSelected()' -%>
										</td> -->
										<!-- <td width="8%" class="td-listing">
											<%= link_to image_tag("/images/backend/active.jpg"), backend_fair_groupings_path(:sort_on => params[:sort_on], :state => 1) -%>
										</td>
										<td width="8%" class="td-listing">
											<%= link_to image_tag("/images/backend/inactive.jpg"), backend_fair_groupings_path(:sort_on => params[:sort_on], :state => 0) -%>
										</td>-->
										<td width="8%" class="td-listing">
											<%= link_to image_tag("/images/backend/showall.jpg"), backend_fair_groupings_path(:sort_on => params[:sort_on]) -%>
										</td>
										<td width="8%" class="td-listing">
											<%= link_to 'Download emails', get_emails_backend_fair_groupings_path(:format => 'csv') -%>
										</td>
										<td width="60%" class="td-new2"><div align="right"><font class="disprecordmsg">
											 <%= page_entries_info @fair_groupings , :entry_name => @controller.controller_name.capitalize if @fair_groupings.size > 0 %>
										</font></div>
										</td> 
									</tr>
								</table>
							</td>
						</tr>
						<tr>
							<td colspan="5">&nbsp;</td>
						</tr>
						</table>
						<table width="100%" cellspacing="1" cellpadding="0" border="0">
						<tr>
							<th width="60%"><div align="left">&nbsp;<%= link_to "Group name", backend_fair_groupings_path(:sort_on => 'name', :search => params[:search], :page => params[:page]) %></div></th>
							<th width="10%"><div align="left">&nbsp;<%= link_to "Start date", backend_fair_groupings_path(:sort_on => 'start_date', :search => params[:search], :page => params[:page]) %></div></th>
							<th width="10%"><div align="left">&nbsp;<%=  link_to "End date", backend_fair_groupings_path(:sort_on => 'end_date', :search => params[:search], :page => params[:page]) %></div></th>
							<th width="20%"><div align="center">&nbsp;Actions&nbsp;</div></th>
						</tr>	
						 <% if @fair_groupings.size > 0 %>
						 <% @fair_groupings.each do |group| %>
						<tr onmouseover="this.style.backgroundColor='#D9D9D9'"  onmouseout="this.style.backgroundColor='<%= cycle('#EFEFEF', '#f8f8f8') %>'" bgcolor="<%= cycle('#EFEFEF', '#f8f8f8') %>">
							<td class="td-listing">&nbsp;<%= link_to group.name,  backend_fair_grouping_fairs_path(group)%></td>
							<td class="td-listing">&nbsp;<%= group.start_date %></td>
							<td class="td-listing">&nbsp;<%= group.end_date %></td>
							<td class="td-listing" align="center">
								<%= link_to 'Update', edit_backend_fair_grouping_path(group) -%> | 
								<%= link_to 'Delete', backend_fair_grouping_path(group), :method => :delete, :confirm => 'Are you sure?' -%>
							</td>
						</tr>
						<% end %>
						<% else %>
						<tr>
							<td colspan = "5" height="170" align="center"  ><div class="listingmessage">No Records Found</div></td>
						</tr>	
						<% end %>
						</table>
				</fieldset>
				</div>
			</td>
		</tr>
		</table>
			<input  type="hidden" name="no" value="s">
			<p align="right"><font size="2" FACE="Verdana, Arial, Helvetica, sans-serif" color="black"><%= will_paginate @fair_groupings,:inner_window =>2, :outer_window => 2 %></font></p>
	</td>
</tr>
</table>